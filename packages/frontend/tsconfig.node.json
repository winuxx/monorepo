{
    "compilerOptions": {
        "composite": true, // 对于引用项目必须设置该属性
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true, // 允许使用 import 导入使用 export = 导出的默认内容
        "strict": true
    },
    "include": [
        "./vite.config.ts",
        "./config/*.ts",
        "scripts/*.js"
    ]
}