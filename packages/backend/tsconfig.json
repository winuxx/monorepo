{
    "compilerOptions": {
        "module": "NodeNext",
        // "moduleResolution": "Node",
        "moduleResolution": "NodeNext",
        // "target": "ESNext",
        "target": "ES2021",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "strict": false,
        // "jsx": "preserve",
        "incremental": true,
        // "tsBuildInfoFile": ".tsbuildinfo",
        "importHelpers": true,
        "isolatedModules": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": false,
        "noEmit": true,
        "noUnusedLocals": true,
        "sourceMap": false,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        // "preserveSymlinks": true,
        "baseUrl": "./",
        "rootDir": "./",
        "paths": {
            "~/*": [
                "./*"
            ],
            "#/*": [
                "./src/*"
            ]
        },
        "types": [
            "node"
        ],
        "lib": [
            "ESNext",
            // "DOM",
            "WebWorker",
            "ScriptHost"
        ]
    },
    "include": [
        "rollup.config.js",
        // ".eslintrc.js", // for eslint parserOptions.project
        // "eslint.config.mjs", // for eslint parserOptions.project
        "config.ts",
        "config.js",
        "config/*.js",
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "./tmp",
        "./logs"
    ]
}